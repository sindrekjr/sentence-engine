{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "arrow-spacing": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "no-mixed-spaces-and-tabs": [
            "error"
        ],
        "prefer-const": [
            "error"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
